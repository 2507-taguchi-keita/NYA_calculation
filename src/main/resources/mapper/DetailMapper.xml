<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.NYA_calculation.repository.DetailMapper">

    <select id="getMonthlyTotal" resultType="com.example.dto.ExpenseSummary">
        SELECT
        DATE_FORMAT(billing_date, '%Y-%m') AS month,
        SUM(amount) AS totalAmount
        FROM
        details
        GROUP BY
        DATE_FORMAT(billing_date, '%Y-%m')
        ORDER BY
        month
    </select>

</mapper>