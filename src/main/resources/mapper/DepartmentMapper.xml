<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.NYA_calculation.repository.DepartmentRepository">

    <select id="findById" resultType="com.example.NYA_calculation.repository.entity.Department" parameterType="Integer">
        SELECT *
        FROM departments
        WHERE id = #{departmentId}
    </select>

</mapper>